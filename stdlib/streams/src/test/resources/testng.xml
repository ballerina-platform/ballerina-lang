<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Ballerina-Streaming-Test-Suite">
    <test name="ballerina-streaming-tests" enabled="true" preserve-order="true" parallel="false">
        <parameter name="enableJBallerinaTests" value="true"/>
       <packages>
           <package name="org.ballerinalang.stdlib.streams.nativeimpl"/>
       </packages>
        <classes>
            <class name="org.ballerinalang.stdlib.streams.BallerinaStreamsV2TableJoinTest" />
            <class name="org.ballerinalang.stdlib.streams.BallerinaStreamsV2PipelineTest" />
            <class name="org.ballerinalang.stdlib.streams.BallerinaStreamsV2JoinTest" />
            <class name="org.ballerinalang.stdlib.streams.BallerinaStreamsV2AggregatorWithGroupByAndWindowTest" />
            <class name="org.ballerinalang.stdlib.streams.BallerinaStreamsV2HavingTest" />
            <class name="org.ballerinalang.stdlib.streams.BallerinaStreamsV2OrderByTest" />
        </classes>
    </test>
</suite>
