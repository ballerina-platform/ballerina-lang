<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>org.wso2</groupId>
        <artifactId>wso2</artifactId>
        <version>5</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.ballerinalang.tools</groupId>
    <artifactId>ballerina-tools-distribution</artifactId>
    <packaging>pom</packaging>
    <version>0.8.0-SNAPSHOT</version>
    <name>Ballerina - Tools</name>
    <description>Ballerina - Tools</description>

    <dependencies>
        <dependency>
            <groupId>org.wso2.ballerina</groupId>
            <artifactId>ballerina-distribution</artifactId>
            <version>${ballerina.distribution.version}</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.wso2.ballerina.editor</groupId>
            <artifactId>ballerina-editor-distribution</artifactId>
            <version>${ballerina.editor.distribution.version}</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.ballerinalang.testerina</groupId>
            <artifactId>testerina-core</artifactId>
            <version>${testerina.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.swagger.ballerina.tool</groupId>
            <artifactId>swagger-command</artifactId>
            <version>${tool.swagger.version}</version>
            <classifier>jar-with-dependencies</classifier>
        </dependency>
        <dependency>
            <groupId>org.wso2.ballerina.swagger.code.generator</groupId>
            <artifactId>swagger2ballerina-connector</artifactId>
            <version>${swagger.code.generator.version}</version>
        </dependency>
        <dependency>
            <groupId>org.ballerinalang</groupId>
            <artifactId>ballerina-container-support</artifactId>
            <version>${ballerina.container.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>unpack-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>
                                ballerina-distribution,ballerina-editor-distribution
                            </includeArtifactIds>
                            <outputDirectory>${project.build.directory}/extracted-distributions</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <useSubDirectoryPerArtifact>false</useSubDirectoryPerArtifact>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.5.2</version>
                <executions>
                    <execution>
                        <id>distribution</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attached</goal>
                        </goals>
                        <configuration>
                            <filters>
                                <filter>${basedir}/src/assembly/filter.properties</filter>
                            </filters>
                            <descriptors>
                                <descriptor>${basedir}/src/assembly/bin.xml</descriptor>
                            </descriptors>
                            <finalName>ballerina-tools-${project.version}</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
        <resources>
            <resource>
                <directory>ballerina-home/bin/</directory>
                <filtering>true</filtering>
                <includes>
                    <include>**/version.txt</include>
                </includes>
            </resource>
        </resources>
    </build>

    <properties>
        <ballerina.distribution.version>0.8.0-SNAPSHOT</ballerina.distribution.version>
        <ballerina.editor.distribution.version>0.8.0-SNAPSHOT</ballerina.editor.distribution.version>
        <testerina.version>0.8.0-SNAPSHOT</testerina.version>
        <tool.swagger.version>0.8.0-SNAPSHOT</tool.swagger.version>
        <swagger.code.generator.version>0.8-SNAPSHOT</swagger.code.generator.version>
        <ballerina.container.version>0.8.0-SNAPSHOT</ballerina.container.version>
    </properties>
</project>
