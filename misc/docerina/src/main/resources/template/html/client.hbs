<!DOCTYPE html>
<html>

{{> head }}

<body>
    <div class="navi-wrapper">
        <div class="navi-wrapper-content">
            {{> logo }}
            <div class="primary-list">
                <h3>Clients</h3>
                <ul>
                    {{#each module.clients}}
                        <li {{#equals client.name name}}class="active active-item"{{/equals}}>
                            <a href="{{name}}.html">{{name}}</a> 
                        </li>
                    {{/each}}
                </ul>
            </div>
            <div class="ui divider"></div>
            {{> currentModule }}
            {{> allModules }}
        </div>
    </div>

    <div class="ui vertical sidebar menu">
        <div class="navi-wrapper-sidebar">
            <div class="navi-wrapper-content">
                {{> logo }}
                <div class="primary-list">
                    <h3>Clients</h3>
                    <ul>
                        {{#each module.clients}}
                            <li {{#equals client.name name}}class="active active-item"{{/equals}}>
                                <a href="{{name}}.html">{{name}}</a>
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="ui divider"></div>
                {{> currentModule }}
                {{> allModules }}
            </div>
        </div>
    </div>

    <div class="content-wrapper pusher">
        {{> mobMenu }}
        <div class="main-wrapper">
            <h1>
                {{> breadcrumb }}
                <span class="title-type">Clients - </span> 
                <a href="{{ rootPath }}{{module.id}}/index.html">{{module.id}}</a> : 
                <span class="clients">{{ client.name }}</span> </h1>
            <p>{{{ client.description }}}</p>

            <div class="constants">
                <div class="method-sum">
                    {{#if client.initMethod}}
                        {{#client.initMethod}}
                            {{> initMethod }}
                        {{/client.initMethod}}
                    {{/if}}

                    {{#if client.remoteMethods }}
                        <h2>Remote Methods</h2>
                        <div class="method-list">
                            {{#each client.remoteMethods}}
                                {{> methodSignature }}
                            {{/each}}
                        </div>
                    {{/if}}

                    {{#if client.otherMethods}}
                        <h2>Methods</h2>
                        <div class="method-list">
                            {{#each client.otherMethods}}
                                {{> methodSignature }}
                            {{/each}}
                        </div>
                    {{/if}}
                
                    {{#if client.fields}}
                        <h2>Fields</h2>
                            {{#client}}    
                                {{> fields }}
                            {{/client}}
                    {{/if}}
                </div>

                {{#if client.remoteMethods }}
                    {{#each client.remoteMethods }}
                        {{> method }}
                    {{/each}}
                {{/if}}

                {{#if client.otherMethods }}
                    {{#each client.otherMethods }}
                        {{> method }}
                    {{/each}}
                {{/if}}
            </div>
        </div>
    </div>
</body>

{{> footer }}
