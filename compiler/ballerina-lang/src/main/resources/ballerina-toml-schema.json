            {
              "type": "string",
              "pattern": "^(?!_).+",
              "maxLength": 256,
              "message": {
                "pattern": "invalid 'org' under [package]: 'org' cannot have initial underscore characters",
                "maxLength": "invalid 'org' under [package]: maximum length of 'org' is 256 characters"
              }
