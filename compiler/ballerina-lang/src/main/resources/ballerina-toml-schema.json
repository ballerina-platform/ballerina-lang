{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ballerina Toml Spec",
  "description": "Schema for Ballerina Toml",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "package": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^(lang|jballerina).[a-z0-9_]*$|^[a-zA-Z0-9_]*$"
        },
        "org": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_]*$"
        },
        "version": {
          "type": "string",
          "pattern": "^(\\d+)\\.(\\d+)\\.(\\d+)(?:-([a-zA-Z0-9]+))?$"
        },
        "license": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "repository": {
          "type": "string"
        }
      }
    },
    "platform": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "java11": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "dependency": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "path": {
                    "type": "string"
                  },
                  "artifactId": {
                    "type": "string"
                  },
                  "groupId": {
                    "type": "string"
                  },
                  "version": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "build-options": {
      "type": "object",
      "properties": {
        "observabilityIncluded": {
          "type": "boolean"
        },
        "offline": {
          "type": "boolean"
        },
        "skipTests": {
          "type": "boolean"
        },
        "testReport": {
          "type": "boolean"
        },
        "codeCoverage": {
          "type": "boolean"
        }
      }
    }
  }
}