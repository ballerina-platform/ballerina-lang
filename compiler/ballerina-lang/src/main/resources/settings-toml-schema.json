{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Settings Toml Spec",
  "description": "Schema for Settings Toml",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "proxy": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "central": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "accesstoken": {
          "type": "string"
        }
      }
    },
    "repository": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "github": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "userId": {
                "type": "string"
              },
              "token": {
                "type": "string"
              }
            }
          }
        },
        "nexus": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "userId": {
                "type": "string"
              },
              "token": {
                "type": "string"
              }
            }
          }
        },
        "artifactory": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "userId": {
                "type": "string"
              },
              "token": {
                "type": "string"
              }
            }
          }
        },
        "file-system": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "userId": {
                "type": "string"
              },
              "token": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
