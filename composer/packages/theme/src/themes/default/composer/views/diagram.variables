/*---------------------------
       Diagram Globals 
----------------------------*/

@diagram-base-light-color: #f1f1f1;
@diagram-base-dark-color: #1e1e1e;

@diagram-icon-font: "font-ballerina";
@diagram-font: @fontName, "@{diagram-icon-font}";
@diagram-font-size: @fontSize;

@light-diagram-background-color: @diagram-base-light-color;
@dark-diagram-background-color: @diagram-base-dark-color;
@light-diagram-base-text-color: @dark-diagram-background-color;
@dark-diagram-base-text-color: @light-diagram-background-color;


/*-------------------
       Panel 
--------------------*/

@light-diagram-panel-header-background-color: @light-diagram-background-color;
@dark-diagram-panel-header-background-color: @dark-diagram-background-color;
@light-diagram-panel-header-text-color: @light-diagram-base-text-color;
@dark-diagram-panel-header-text-color: @dark-diagram-base-text-color;
@light-diagram-panel-body-background-color: @light-diagram-background-color;
@dark-diagram-panel-body-background-color: @dark-diagram-background-color;


/*-------------------
       Stroke 
--------------------*/

@light-diagram-arrow-head-color: @light-diagram-stroke-color;
@dark-diagram-arrow-head-color: @dark-diagram-stroke-color;

@light-diagram-stroke-color: @light-diagram-base-text-color;
@dark-diagram-stroke-color: @dark-diagram-base-text-color;

@diagram-stroke-width: 1px;


/*-------------------
       Statement
--------------------*/

@diagram-statement-font-size: @diagram-font-size;


/*-------------------
       Lifeline
--------------------*/

@light-diagram-life-line-stroke-color: @light-diagram-stroke-color;
@dark-diagram-life-line-stroke-color: @dark-diagram-stroke-color;
@light-diagram-life-line-text-color: @light-diagram-base-text-color;
@dark-diagram-life-line-text-color: @dark-diagram-base-text-color;

@light-diagram-life-line-head-background-color: @diagram-base-dark-color;
@dark-diagram-life-line-head-background-color: @diagram-base-dark-color;
@light-diagram-life-line-head-stroke-color: @light-diagram-life-line-stroke-color;
@dark-diagram-life-line-head-stroke-color: @dark-diagram-life-line-stroke-color;
@light-diagram-life-line-head-text-color: @light-diagram-base-text-color;
@dark-diagram-life-line-head-text-color: @dark-diagram-base-text-color;

@diagram-life-line-stroke-width: @diagram-stroke-width;
@diagram-life-line-head-font-size: calc(@diagram-font-size + 2px);


/*-------------------
       Condition 
--------------------*/

@light-diagram-condition-stroke-color: @light-diagram-stroke-color;
@dark-diagram-condition-stroke-color: @dark-diagram-stroke-color;

@light-diagram-condition-background-color: @white;
@dark-diagram-condition-background-color: @diagram-base-dark-color;
@light-diagram-condition-text-color: @light-diagram-stroke-color;
@dark-diagram-condition-text-color: @dark-diagram-stroke-color;

@light-diagram-condition-line-stroke-color: @light-diagram-stroke-color;
@dark-diagram-condition-line-stroke-color: @dark-diagram-stroke-color;

@diagram-condition-stroke-width: @diagram-stroke-width;
@diagram-condition-line-stroke-width: @diagram-stroke-width;


/*-------------------
       Buttons 
--------------------*/

@diagram-button-background-color: #00B5AD;
@diagram-button-text-color: #fff;

@dark-diagram-button-background-color: @diagram-button-background-color;
@dark-diagram-button-text-color: @diagram-button-text-color;

@light-diagram-button-background-color: @diagram-button-background-color;
@light-diagram-button-text-color: @diagram-button-text-color;