                        <id>prepare</id>
                        <phase>compile</phase>
                        <configuration>
                            <tasks>
                                <echo message="prepare phase"/>
                                <unzip src="target/composer-test-pack.zip" dest="target/"/>
                            </tasks>
                        </configuration>
                        <goals>
