import ballerina/test;
import ballerina/jballerina.java;

configurable int number = getConfigurableVal(5);
configurable float fraction = ?;
configurable string name = ?;
configurable boolean isConfig = false;

public function main() {
    test:assertEquals(25, number);
    test:assertEquals(4.22, fraction);
    test:assertEquals("Tom", name);
    test:assertEquals(true, isConfig);

    print("Tests passed");
}

function getConfigurableVal(int val) returns int{
    return val + 5;
}

//Extern methods to verify no errors while testing
function system_out() returns handle = @java:FieldGet {
    name: "out",
    'class: "java.lang.System"
} external;

function println(handle receiver, handle arg0) = @java:Method {
    name: "println",
    'class: "java.io.PrintStream",
    paramTypes: ["java.lang.String"]
} external;

function print(string str) {
    println(system_out(), java:fromString(str));
}
