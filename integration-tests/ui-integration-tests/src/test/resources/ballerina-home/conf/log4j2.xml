<Configuration>
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%ex%n"/>
        </Console>
        <RollingFile name="SERVER_LOGFILE" fileName="${sys:carbon.home}/logs/ballerina-server.log"
                     filePattern="${sys:carbon.home}/logs/ballerina-server-%d{MM-dd-yyyy}.log">
            <PatternLayout pattern="[%d] %m%ex%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>
        <RollingFile name="BVM_LOGFILE" fileName="${sys:carbon.home}/logs/bvm.log"
                     filePattern="${sys:carbon.home}/logs/bvm-%d{MM-dd-yyyy}.log">
            <PatternLayout pattern="[%d] %5p {%c} - %m%ex%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>
        <RollingFile name="AUDIT_LOGFILE" fileName="${sys:carbon.home}/logs/audit.log"
                     filePattern="${sys:carbon.home}/logs/audit-%d{MM-dd-yyyy}.log">
            <PatternLayout pattern="[%d] %5p %X %m%ex%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <!-- Change root log level to info to enable All runtime logs. -->
        <Root level="warn">
            <AppenderRef ref="BVM_LOGFILE"/>
        </Root>
        <Logger name="AUDIT_LOG" level="info" additivity="false">
            <AppenderRef ref="AUDIT_LOGFILE"/>
        </Logger>
        <Logger name="org.ballerinalang.core" level="info" additivity="false">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="SERVER_LOGFILE"/>
            <!-- Change bellow log level to include Ballerina logs. -->
            <AppenderRef ref="BVM_LOGFILE" level="off"/>
        </Logger>
    </Loggers>
</Configuration>