<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.ballerinalang</groupId>
        <artifactId>swagger-ballerina</artifactId>
        <version>0.8.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>swagger-ballerina-generator</artifactId>
    <packaging>jar</packaging>
    <name>WSO2 Swagger Ballerina - Generator</name>
    <url>http://maven.apache.org</url>

    <dependencies>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-plugin-api</artifactId>
        </dependency>
        <!-- dependencies to annotations -->
        <dependency>
            <groupId>org.apache.maven.plugin-tools</groupId>
            <artifactId>maven-plugin-annotations</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.swagger</groupId>
            <artifactId>swagger-codegen</artifactId>
        </dependency>
        <dependency>
            <groupId>io.airlift</groupId>
            <artifactId>airline</artifactId>
        </dependency>
        <dependency>
            <groupId>com.googlecode.lambdaj</groupId>
            <artifactId>lambdaj</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
        </dependency>
        <dependency>
            <groupId>org.ballerinalang</groupId>
            <artifactId>ballerina-launcher</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-log4j12</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.beust</groupId>
            <artifactId>jcommander</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>org.ballerinalang.swagger.code.generator.SwaggerCodegen</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <!--<id>process-resources</id>-->
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <minimizeJar>false</minimizeJar>
                            <createDependencyReducedPom>true</createDependencyReducedPom>
                            <dependencyReducedPomLocation>
                                ${java.io.tmpdir}/dependency-reduced-pom.xml
                            </dependencyReducedPomLocation>
                            <artifactSet>
                                <excludes>
                                    <exclude>org.wso2.orbit.org.antlr:antlr4-runtime</exclude>
                                    <exclude>org.apache.james:apache-mime4j-core</exclude>
                                    <exclude>org.apache.ws.commons.axiom:axiom-api</exclude>
                                    <exclude>org.apache.ws.commons.axiom:axiom-impl</exclude>
                                    <exclude>org.wso2.ballerina:*</exclude>
                                    <exclude>commons-logging:commons-logging</exclude>
                                    <exclude>org.apache.commons:commons-lang3</exclude>
                                    <exclude>commons-pool.wso2:commons-pool</exclude>
                                    <exclude>org.apache.geronimo.specs:geronimo-activation_1.1_spec</exclude>
                                    <exclude>org.apache.geronimo.specs:geronimo-stax-api_1.0_spec</exclude>
                                    <exclude>com.fasterxml.jackson.core:*</exclude>
                                    <exclude>javax.websocket:javax.websocket-api</exclude>
                                    <exclude>jaxen:jaxen</exclude>
                                    <exclude>com.beust:jcommander</exclude>
                                    <exclude>com.jayway.jsonpath:json-path</exclude>
                                    <exclude>io.netty:*</exclude>
                                    <exclude>org.wso2.carbon:*</exclude>
                                    <exclude>org.wso2.orbit.net.sf.saxon:Saxon-HE</exclude>
                                    <exclude>org.slf4j:*</exclude>
                                    <exclude>org.wso2.orbit.org.yaml:snakeyaml</exclude>
                                    <exclude>org.wso2.staxon:staxon-core</exclude>
                                    <exclude>org.wso2.orbit.org.apache.tapestry:tapestry-json</exclude>
                                    <exclude>org.wso2.eclipse.osgi:*</exclude>
                                    <exclude>org.wso2.eclipse.equinox:*</exclude>
                                    <exclude>org.osgi:*</exclude>
                                    <exclude>org.apache.felix:*</exclude>
                                    <exclude>xmlpull:xmlpull</exclude>
                                    <exclude>com.google.code.findbugs:jsr305</exclude>
                                    <exclude>net.minidev:accessors-smart</exclude>
                                    <exclude>org.wso2.carbon.transport:*</exclude>
                                    <exclude>org.wso2.carbon.messaging:*</exclude>
                                </excludes>
                            </artifactSet>
                            <filters>
                            <filter>
                                <artifact>*:*</artifact>
                                <excludes>
                                    <exclude>META-INF/*.SF</exclude>
                                    <exclude>META-INF/*.DSA</exclude>
                                    <exclude>META-INF/*.RSA</exclude>
                                </excludes>
                            </filter>
                            </filters>
                            <transformers>
                                <transformer
                                        implementation=
                                                "org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19.1</version>
                <configuration>
                    <useSystemClassLoader>false</useSystemClassLoader>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <properties>
    </properties>
</project>
